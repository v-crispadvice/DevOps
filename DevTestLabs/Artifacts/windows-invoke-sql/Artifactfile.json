{
    "$schema": "https://raw.githubusercontent.com/Azure/azure-devtestlab/master/schemas/2015-01-01/dtlArtifacts.json",
    "title": "Run SQL Script",
    "description": "Run SQL script from local file",
    "publisher": "Efima Oy",
    "iconUri": "https://raw.githubusercontent.com/v-crispadvice/DevOps/master/DevTestLabs/Artifacts/windows-run-sql/RunSQL.ico",
    "targetOsType": "Windows",
    "parameters": {
        "ScriptFilePath": {
            "type": "string",
            "displayName": "Script Path",
            "description": "Path to script file (e.g. restore.sql)"
        }
    },
    "runCommand": {
        "commandToExecute": "[concat('powershell.exe -ExecutionPolicy bypass -File InvokeSQL.ps1', ' -ScriptFile ', parameters('ScriptFilePath'))]"
    }
}