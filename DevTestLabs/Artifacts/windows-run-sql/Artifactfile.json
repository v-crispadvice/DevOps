{
    "$schema": "https://raw.githubusercontent.com/Azure/azure-devtestlab/master/schemas/2015-01-01/dtlArtifacts.json",
    "title": "Run SQL script",
    "description": "Use this to run SQL script using PowerShell",
    "publisher": "Efima Oy",
    "iconUri": "http://www.visualstudio.com/favicon.ico",
    "targetOsType": "Windows",
    "parameters": {
         "scriptFileUri": {
            "type": "string",
            "displayName": "File URI",
            "description": "Script file to run (e.g. c:\vsts\drop\backup\restore.sql)"
        }   },
    "runCommand": {
        "commandToExecute": "[concat('powershell.exe -ExecutionPolicy bypass -File runSQL.ps1', ' -scriptFileURI ', parameters('scriptFileUri'))]"
    }
}